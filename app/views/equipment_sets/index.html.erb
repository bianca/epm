<% title 'Equipment Sets' %>
<div style="float: right">
<%= link_to 'New Equipment Set', new_equipment_set_path, {class: 'button blue'} %>
</div>
<table style="width: 80%; margin-left: 10%; margin-right: 10%"> 
  <thead>
    <tr>
      <th style="width: 20%; text-align: left">Title</th>
      <th style="width: 40%; text-align: left">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipment_sets.each do |equipment_set| %>
      <tr>
        <td style="font-weight: bold"><%= equipment_set.title %></td>
        <td style="font-weight: none"><%= equipment_set.description %></td>
        <% if can?(:read, equipment_set) %>
          <td><%= link_to 'Show', equipment_set %></td>
        <% end %>
        <% if can?(:edit, equipment_set) %>
          <td><%= link_to 'Edit', edit_equipment_set_path(equipment_set) %></td>
        <% end %>
        <% if can?(:edit, equipment_set) %>
          <td><%= link_to 'Delete', equipment_set, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
