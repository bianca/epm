<div class="block"> 
<h1><%= @equipment_set.title %></h1>
<p>
  <strong>Description:</strong>
  <%= @equipment_set.description %>

  <% if @equipment_set.issues.present? %>
    <br /> <br /> <strong>Issues:</strong>
  	<span style="color: #991212"> <%= @equipment_set.issues %></span>
  <% end %>
    <%= render 'shared/address_and_map', thing: @equipment_set %>
</p>
</div>

<% if @equipment_set.events.any? %>
	<div style="margin-bottom: 20px">
	<h2><%= Configurable.event.pluralize.titlecase %></h2>
	<%= render "events/events", events: @equipment_set.events %>
	</div>
<% end %>

<%= link_to 'Edit', edit_equipment_set_path(@equipment_set) %> |
<%= link_to 'Back', equipment_sets_path %>
