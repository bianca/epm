<% user ||= User.new %>

<dl>
  <% if event.description %>
    <dt>Description</dt>
    <dd><%= paragraphs event.description %></dd>
  <% end %>
  <% if event.notes && user.ability.can?(:read_notes, event) %>
    <dt>Notes for admins and coordinators</dt>
    <dd><%= paragraphs event.notes %></dd>
  <% end %>
  <dt>When</dt>
  <dd>
    <% if event.start %>
      <%= date event.start %>, <%= time event.start %> to <%= time event.finish %> (<%= pluralize event.duration_hours, 'hour' %>)
    <% else %>
      Date not set.
    <% end %>
  </dd>
  <% if event.address || event.coords %>
    <dt>Where</dt>
    <dd>
      <% if event.address %>
        <%= with_br event.address %>
      <% else %>
        <%= event.coords.join ', ' %>
      <% end %>
    </dd>
  <% end %>
  <% if event.coordinator %>
    <dt>Coordinator</dt>
    <dd><%= event.coordinator.display_name %></dd>
  <% end %>
</dl>