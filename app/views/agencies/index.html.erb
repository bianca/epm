<% title "Agencies" %>
<div style="float: right">
  <%= link_to 'New Agency', new_agency_path, {class: 'button blue'} %>
</div>
<table style="width: 80%; margin-left: 10%; margin-right: 10%">
  <thead>
    <tr>
      <th style="width: 20%; text-align: left">Title</th>
      <th style="width: 40%; text-align: left">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agencies.each do |agency| %>
      <tr>
        <td style="font-weight: bold"><%= agency.title %></td>
        <td style="font-weight: none"><%= agency.description %></td>
        <% if can?(:read, agency) %>
          <td><%= link_to 'Show', agency %></td>
        <% end %>
        <% if can?(:edit, agency) %>
          <td><%= link_to 'Edit', edit_agency_path(agency) %></td>
        <% end %>
        <% if can?(:edit, agency) %>
          <td><%= link_to 'Delete', agency, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


