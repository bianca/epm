    </tr>
    <tr>
      
      	<td>
      		<% if @agency.mondayopen.blank? || @agency.mondayclose.blank? %>
            	Closed?
            <% else %> 
        		<%= @agency.mondayopen.strftime("%I:%M %p") %>-<%= @agency.mondayclose.strftime("%I:%M %p") %>
        	<% end %>
        </td>
