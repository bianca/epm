<div class="block"> 
<h1><%= @agency.title %></h1>
<p>
  <strong>Description:</strong>
  <%= @agency.description %>

    <div class="field">
    Hours of Operation<br>
    <table>
    <tr>
      <th width="100">Monday</th>
      <th width="100">Tuesday</th>
      <th width="100">Wednesday</th>
      <th width="100">Thursday</th>
