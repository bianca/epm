            <% else %> 
        		<%= @agency.sundayopen.strftime("%I:%M %p") %>-<%= @agency.sundayclose.strftime("%I:%M %p") %>
        	<% end %>
        </td>

  </tr>
</table>

  <%= render 'shared/address_and_map', thing: @agency %>
</p>
</div>

<% if @agency.events.any? %>
	<div style="margin-bottom: 20px">
		<h2><%= Configurable.event.pluralize.titlecase %></h2>
		<%= render "events/events", events: @agency.events %>
	</div>
<% end %>

